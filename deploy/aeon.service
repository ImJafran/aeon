[Unit]
Description=Aeon - Self-Evolving Agentic Kernel
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/root
ExecStart=/usr/local/bin/aeon serve
Restart=on-failure
RestartSec=5
StartLimitIntervalSec=60
StartLimitBurst=5

# Environment
Environment=AEON_HOME=/home/ubuntu/.aeon
# Uncomment and set your provider API key:
# Environment=ANTHROPIC_API_KEY=your-key-here
# Environment=GEMINI_API_KEY=your-key-here

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=aeon

[Install]
WantedBy=multi-user.target
